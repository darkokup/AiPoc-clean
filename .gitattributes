# Auto detect text files and perform LF normalization
* text=auto

# Python files
*.py text eol=lf
*.pyw text eol=lf

# Shell scripts
*.sh text eol=lf
*.bash text eol=lf

# Batch files
*.bat text eol=crlf
*.cmd text eol=crlf
*.ps1 text eol=crlf

# Configuration files
*.yml text eol=lf
*.yaml text eol=lf
*.json text eol=lf
*.xml text eol=lf
*.csv text eol=lf

# Documentation
*.md text eol=lf
*.txt text eol=lf

# Binary files
*.db binary
*.sqlite binary
*.pkl binary
*.npy binary
*.npz binary
*.h5 binary
*.hdf5 binary
